@using PhotoBlog.Models
@model List<Photo>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron text-center bg-info text-white-50">
    <div class="head">
        <h2 class="mt-0 mb-5 text-secondary">Welcome to My Photo Blog </h2>
    </div>
    @foreach (var photo in Model)
    {
    <div class="content">
        <div class="head">
            <h3>@photo.Head</h3>
        </div>
        <div class="tags">
            <p>@photo.TagsName</p>
        </div>
        <div class="photo">
            <img src="@photo.Path" alt="@photo.Head" class="rounded-lg" style="width:1000px; height:800px;"/>
        </div>
        <div>
            <div class="description text-left ml-4">
                <p>@photo.Description</p>
            </div>
            <div class="time text-right mr-5 mt-0">
                <p>@photo.DateTime</p>
            </div>
        </div>
    </div>
    <hr />
    }
</div>

